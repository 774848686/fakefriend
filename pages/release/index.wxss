.page{
  padding: 20px
}
 
.text{
  width: 100%;
  margin-bottom: 40px;
  font-size: 20px;
  padding: 5px
}
.move-area{
  width:100%;
  height:100%;
  overflow: hidden;
}
.image{
  position: relative;
  display: inline-block;
  width:30%;
  height: 98px;
  margin: 4px;
  background: rgb(229, 229, 229);
  box-sizing: border-box;
}
.clear{
  position: absolute;
  bottom:10px;
  right:10px;
  width:20px;
  height: 20px;
}
.item-move{
  display: inline-block;
  width:98px;
  height: 98px;
}
.moment_img{
  width: 100%;
  height: 100%;
}
 
.image_content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20px
}
